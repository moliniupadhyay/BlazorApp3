@page "/counter/{initialcount:int?}"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

@if (currentCount % 2 == 0)
{
    <p>The count is even.</p>
}
else
{
    <p>The count is odd.</p>
}


<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<p>Initialcount= @InitialCount</p>

@if (currentCount % 5 == 0 && currentCount != 0)
{
    <p style="color: red;">Congratulations! You've reached a multiple of 5.</p>
}


@code {
    private int currentCount = 0;

    protected override void OnInitialized(){
       currentCount=InitialCount;
    }
    
    [Parameter]
    public int InitialCount {get;set;}
    private void IncrementCount()
    {
        currentCount++;
    }
}
<h3>Count Number Repeated:</h3>
@for (int i = 0; i < currentCount; i++)
{
    <p>clicked :@currentCount times</p>
}
